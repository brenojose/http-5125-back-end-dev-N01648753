<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Teacher Finder</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr") <!-- Include modernizr script -->

    <style>

        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            line-height: 1.6;
            font-size: 16px;
            background: #282828;
            color: #e0e0e0;
            padding-top: 50px;
            padding-bottom: 20px;
        }


        header {
            background: linear-gradient(to right, #333, #4B499C);
            color: #fff;
            padding: 20px 0;
            margin-bottom: 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }


        .navbar-dark {
            background-color: #333;
            border-bottom: 2px solid #7E7DFF;
        }

            .navbar-dark .navbar-nav .nav-item .nav-link {
                color: #e0e0e0;
                transition: color 0.3s ease-in-out;
            }

                .navbar-dark .navbar-nav .nav-item .nav-link:hover {
                    color: #7E7DFF;
                    text-decoration: none;
                }


        footer {
            background: #333;
            color: #e0e0e0;
            padding: 20px 0;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
            text-align: center;
        }


        .container {
            background-color: #404040;
            border-radius: 10px;
            padding: 30px;
            margin: 30px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }


        .content {
            background-color: #404040;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
        }


        button,
        input[type="submit"],
        input[type="text"],
        input[type="date"],
        input[type="number"],
        select,
        textarea {
            background-color: #7E7DFF;
            color: #fff;
            border: none;
            padding: 15px 30px;
            margin: 10px;
            border-radius: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
        }

            button:hover,
            input[type="submit"]:hover {
                background-color: #4B499C;
                color: #e0e0e0;
                transform: scale(1.05);
                cursor: pointer;
            }

            input[type="text"]:hover,
            input[type="date"]:hover,
            input[type="number"]:hover,
            select:hover,
            textarea:hover {
                border: 1px solid #7E7DFF;
            }


        form {
            background: #333;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }


        a {
            position: relative;
            color: #7E7DFF;
            text-decoration: none;
            transition: color 0.3s;
        }

            a:before {
                content: '';
                position: absolute;
                width: 100%;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: #7E7DFF;
                visibility: hidden;
                border-radius: 5px;
                transform: scaleX(0);
                transition: all 0.3s ease-in-out;
            }

            a:hover:before {
                visibility: visible;
                transform: scaleX(1);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                @Html.ActionLink("Teacher Finder", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("API", "Index", "Help", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Search", "Teacher")">Search</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Teacher Finder</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
